# Auto-activate Python virtual environment
# Requires: direnv (https://direnv.net/)

# Use uv's venv if available, otherwise standard venv activation
if [[ -d .venv ]]; then
    source .venv/bin/activate
    export VIRTUAL_ENV="$PWD/.venv"
    export PATH="$VIRTUAL_ENV/bin:$PATH"
fi

# Load local environment variables (API keys, etc.)
# Supports both .env and .env.local (latter takes precedence)
[[ -f .env ]] && dotenv .env
[[ -f .env.local ]] && dotenv .env.local

# Optional: Set Python version explicitly for tools that check it
export PYTHON_VERSION="3.12"

# Optional: Ensure uv uses this project's Python
export UV_PYTHON="3.12"
